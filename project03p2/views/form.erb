<form action="/list" class="form-inline" method="POST">
	<label for="order">Sort By</label>
	<select class="span2" name="order">
		<option value="rank">Rank (default)</option>
		<option value="title">Name</option>
		<option value="year">Year</option>
	</select>
	<label for="rank">Select a Rank to Highlight</label>
	<select class="span1" name="rank">
		<% @num.times do |i| %> 
		<%= "<option value=#{i+1}>#{i+1}</option>" %>
		<% end %>
	</select>
	<input type="submit" class="btn btn-primary" value="Display List">
</form>